# Zero Trust Spring Boot - Variables de entorno

# Aplicación
SPRING_PROFILES_ACTIVE=development
APP_PORT=8080

# Base de datos
POSTGRES_PORT=5432
POSTGRES_DB=zerotrust
POSTGRES_USER=zerotrust
POSTGRES_PASSWORD=secure_password

# Redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# JWT (para desarrollo - en producción viene del Vault)
JWT_SECRET=dev-jwt-secret-key-at-least-64-characters-for-development

# Java
JAVA_OPTS=-Xmx512m -XX:+UseContainerSupport

# Vault
VAULT_ROOT_TOKEN=dev-root-token
VAULT_TOKEN=dev-root-token
VAULT_HOST=vault
VAULT_PORT=8200
VAULT_SCHEME=http

